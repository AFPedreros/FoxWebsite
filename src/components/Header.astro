---
import { Image } from "astro:assets"

import foxLogo from "@/assets/logo-fox-ordering.png"
import HeaderLink from "@/components/HeaderLink.astro"
import Link from "@/components/Link.astro"
import Phone from "@/components/icons/Phone.astro"
import { Button } from "@/components/ui/button"
---

<header class="flex h-20 items-center bg-background px-9 text-foreground shadow-sm">
	<nav class="flex w-full items-center justify-between">
		<a href="/"><Image class="h-12 w-auto" src={foxLogo} alt="Fox Ordering logo." /></a>
		<div class="flex items-center gap-4">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="flex items-center gap-2">
			<Link class="flex items-center" href="tel:8668836967" target="_blank"
				><Phone class="mr-2 size-4 shrink-0" /> 866-883-6967
			</Link>
			<Button>Get a free demo</Button>
		</div>
	</nav>
</header>
