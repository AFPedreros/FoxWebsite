---
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"a">

const { href, class: className, ...props } = Astro.props
---

<a
	href={href}
	class="group text-black transition-all duration-300 ease-in-out"
	class:list={[className]}
	{...props}
>
	<span
		class="bg-gradient-to-r from-primary to-primary bg-[length:0%_1.5px] bg-left-bottom bg-no-repeat pb-0.5 transition-all duration-300 ease-out group-hover:bg-[length:100%_1.5px]"
	>
		<slot />
	</span>
</a>
