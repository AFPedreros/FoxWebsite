---
import ArrowRight from "@/components/icons/ArrowRight.astro"
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="relative flex w-full bg-primary py-16">
	<div
		class="absolute right-0 top-0 h-full w-1/3 bg-gradient-to-br from-background from-30% to-primary"
	>
	</div>
	<div class="container flex h-full items-center text-black">
		<h2 class="mr-8 text-nowrap text-3xl font-bold">
			{i18n.ABOUT_US.JOIN_OUR_TEAM_TITLE}
		</h2>
		<p class="flex-1 text-pretty">{i18n.ABOUT_US.JOIN_OUR_TEAM_TEXT}</p>

		<div
			class="z-30 flex w-[calc((100vw/3)-2.25rem)] items-center justify-center 2xl:w-[calc((100vw/3)-8rem)]"
		>
			<a
				href="#_"
				class="group relative inline-flex items-center overflow-hidden rounded-md border border-white px-12 py-3 text-lg font-medium text-white transition-colors duration-200 hover:border-primary hover:bg-transparent hover:text-white"
			>
				<span
					class="absolute left-0 top-1/2 block h-0 w-full bg-primary opacity-100 transition-all duration-200 group-hover:top-0 group-hover:h-full"
				></span>
				<span
					class="absolute right-0 flex h-10 w-10 translate-x-full items-center duration-300 group-hover:translate-x-0"
				>
					<ArrowRight class="size-5" />
				</span>
				<span class="relative">{i18n.ABOUT_US.JOIN_OUR_TEAM_BUTTON}</span>
			</a>
		</div>
	</div>
</section>
