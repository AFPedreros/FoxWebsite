---
import { Image } from "astro:assets"

import ftrLogo from "@/assets/what-we-offer/ftr-logo.png"
import ftr from "@/assets/what-we-offer/ftr.jpg"
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="hero relative flex h-screen w-full py-20">
	<Image class="absolute left-0 top-0 h-full w-full object-cover object-left" src={ftr} alt="" />

	<div class="container z-10 flex h-full items-center justify-end">
		<div class="w-1/2">
			<div class="flex items-center">
				<h2
					set:html={i18n.WHAT_WE_OFFER.FTR_TITLE}
					class="mr-2 text-balance text-3xl font-bold text-primary"
				/>
				<Image class="mt-2 h-6 w-auto object-cover object-center" src={ftrLogo} alt="" />
			</div>
			<p class="mt-8 text-pretty text-lg text-black">
				{i18n.WHAT_WE_OFFER.FTR_TEXT}
			</p>

			<ul class="mt-8 list-disc pl-4">
				<li set:html={i18n.WHAT_WE_OFFER.FTR_LIST_ITEM_1} class="mt-4 text-pretty text-black" />
				<li set:html={i18n.WHAT_WE_OFFER.FTR_LIST_ITEM_2} class="mt-4 text-pretty text-black" />
				<li set:html={i18n.WHAT_WE_OFFER.FTR_LIST_ITEM_3} class="mt-4 text-pretty text-black" />
				<li set:html={i18n.WHAT_WE_OFFER.FTR_LIST_ITEM_4} class="mt-4 text-pretty text-black" />
			</ul>
		</div>
	</div>
</section>
