---
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="hero flex h-screen w-full pb-20 pt-40">
	<div class="container flex h-full items-center justify-start gap-8">
		<div class="max-w-md">
			<h1 class="mx-auto text-5xl font-light tracking-tighter text-primary md:text-6xl lg:text-7xl">
				{i18n.WHAT_WE_OFFER.HERO_TITLE}
			</h1>
			<h2 class="mt-8 text-pretty text-lg text-black">{i18n.WHAT_WE_OFFER.HERO_SUBTITLE}</h2>
			<p set:html={i18n.WHAT_WE_OFFER.HERO_TEXT} class="mt-8 text-pretty text-black" />
		</div>
	</div>
</section>

<style>
	.hero {
		background-image: url("/banner-what-we-offer.webp");
		background-size: cover;
		background-position: center;
	}
</style>
