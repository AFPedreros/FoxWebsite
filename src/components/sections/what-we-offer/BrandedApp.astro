---
import { Image } from "astro:assets"

import brandedApp from "@/assets/what-we-offer/branded-app.jpg"
import mobile from "@/assets/what-we-offer/mobile.png"
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="hero relative flex h-screen w-full py-20">
	<Image
		class="absolute left-0 top-0 h-full w-full object-cover object-left"
		src={brandedApp}
		alt=""
	/>

	<div class="container z-10 flex h-full items-center justify-start">
		<div class="w-1/2">
			<div class="flex items-center">
				<Image class="mr-2 mt-2 h-20 w-auto object-cover object-center" src={mobile} alt="" />
				<h2
					set:html={i18n.WHAT_WE_OFFER.BRANDED_APP_TITLE}
					class="text-balance text-3xl font-bold text-black"
				/>
			</div>
			<p set:html={i18n.WHAT_WE_OFFER.BRANDED_APP_SUBTITLE} class="mt-8 text-pretty text-lg" />

			<div class="mt-8 flex gap-4">
				<div class="ml-8 mt-2 size-10 shrink-0 border-b-2 border-l-2 border-black"></div>
				<p class="text-pretty">
					{i18n.WHAT_WE_OFFER.BRANDED_APP_TEXT}
				</p>
			</div>
		</div>
	</div>
</section>
