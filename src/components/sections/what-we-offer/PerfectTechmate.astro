---
import { Image } from "astro:assets"

import perfectTechmate from "@/assets/what-we-offer/perfect-techmate.jpg"
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="hero relative flex h-fit w-full py-20">
	<Image
		class="absolute left-0 top-0 h-full w-full object-cover object-center"
		src={perfectTechmate}
		alt=""
	/>

	<div class="container z-10 flex h-full items-center justify-end text-right">
		<div class="max-w-sm">
			<h2
				set:html={i18n.WHAT_WE_OFFER.PERFECT_TECHMATE_TITLE}
				class="text-balance text-5xl font-light"
			/>
			<p set:html={i18n.WHAT_WE_OFFER.PERFECT_TECHMATE_TEXT} class="mt-8 text-pretty" />
		</div>
	</div>
</section>
