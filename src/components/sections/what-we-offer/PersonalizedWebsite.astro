---
import { Image } from "astro:assets"

import personalizedWebsite from "@/assets/what-we-offer/personalizated-website.jpg"
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="hero relative flex h-fit w-full py-20">
	<Image
		class="absolute left-0 top-0 h-full w-full object-cover object-center"
		src={personalizedWebsite}
		alt=""
	/>

	<div class="container z-10 flex h-full items-center justify-start">
		<div class="max-w-sm">
			<h2
				set:html={i18n.WHAT_WE_OFFER.PERSONALIZED_WEBSITE_TITLE}
				class="text-balance text-5xl font-light text-primary"
			/>
			<h3 class="mt-4 text-pretty text-lg font-semibold">
				{i18n.WHAT_WE_OFFER.PERSONALIZED_WEBSITE_SUBTITLE}
			</h3>
			<p class="mt-8 text-pretty">
				{i18n.WHAT_WE_OFFER.PERSONALIZED_WEBSITE_TEXT}
			</p>
		</div>
	</div>
</section>
