---
import { FreeDemoForm } from "@/components/free-demo-form"
import { getI18N } from "@/i18n"
import RootLayout from "@/layouts/RootLayout.astro"
import "@/styles/globals.css"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<RootLayout title={i18n.SEO_TITLE} description={i18n.SEO_DESCRIPTION}>
	<main>
		<section class="hero mt-20 flex min-h-screen w-full py-20">
			<div class="container flex h-fit items-center justify-end gap-8">
				<div class="max-w-md">
					<h1 class="mx-auto text-right text-5xl tracking-tighter md:text-6xl lg:text-7xl">
						{i18n.HERO_TITLE}
					</h1>
					<p set:html={i18n.HERO_SUBTITLE} class="mt-8 text-pretty text-right text-lg" />
				</div>
				<div class="h-fit rounded-lg bg-background/75 p-6">
					<h2 class="mb-4 max-w-lg text-balance text-center text-2xl font-normal tracking-tight">
						{i18n.OWNER_FORM.TITLE}
					</h2>
					<FreeDemoForm client:load locale={currentLocale || "en"} />
				</div>
			</div>
		</section>
	</main>
</RootLayout>

<style>
	.hero {
		background-image: url("/banner-home.jpg");
		background-size: cover;
		background-position: center;
	}
</style>
