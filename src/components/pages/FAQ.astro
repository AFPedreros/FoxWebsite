---
import { FaqAccordion } from "@/components/FaqAccordion"

import { getI18N } from "@/i18n"
import RootLayout from "@/layouts/RootLayout.astro"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<RootLayout title={i18n.SEO.FAQ_TITLE} description={i18n.SEO.FAQ_DESCRIPTION}>
	<main>
		<section class="hero min-h-screen w-full pb-20 pt-40">
			<div class="container text-white">
				<h1
					set:html={i18n.FAQ.TITLE}
					class="mx-auto mb-8 text-balance text-5xl font-light tracking-tighter md:text-6xl lg:text-7xl"
				/>

				<div class="w-1/2">
					<FaqAccordion locale={currentLocale ?? "en"} client:load />
				</div>
			</div>
		</section>
	</main>
</RootLayout>

<style>
	.hero {
		background-image: url("/banner-faq.jpg");
		background-size: cover;
		background-position: center;
	}
</style>
